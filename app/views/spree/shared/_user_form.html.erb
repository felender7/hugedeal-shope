<div class="form-group">
  <%= f.email_field :email, :class => 'title input' , placeholder:"Email"%>
</div>
<div id="password-credentials">
  <div class='form-group'>
    <%= f.password_field :password, :class => 'title input' , placeholder:"Password"%>
  </div>
  <div class='form-group'>
    <%= f.password_field :password_confirmation, :class => 'title input', placeholder:"Confirm password" %>
  </div>
</div>

<div data-hook="signup_below_password_fields"></div>
