<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<!-- section -->
<div class="section">
<!-- container -->
<div class="container">
  <div id='devise' class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <div id="forgot-password" class='panel panel-default'>

        <div class='panel-heading'>
          <%= Spree.t(:forgot_password) %>
        </div>
        <div class='panel-body'>
          <div class='alert alert-info'>
            <%= Spree.t(:instructions_to_reset_password) %>
          </div>

          <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
          <div class='form-group'>

            <%= f.email_field :email, class: 'input', placeholder:"Email" %>
          </div>
          <p>
            <%= f.submit Spree.t(:reset_password), :class => 'primary-btn btn-block' %>
          </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
